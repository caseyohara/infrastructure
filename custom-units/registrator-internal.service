[Unit]
Description=Docker Registrator - flannel network
Requires=docker.service
Wants=docker.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=300
ExecStartPre=/usr/bin/docker pull gliderlabs/registrator:v4
ExecStart=/bin/sh -c 'docker run --rm --name %p -h $HOSTNAME -v /var/run/docker.sock:/tmp/docker.sock gliderlabs/registrator:v4 -internal -ttl 30 -ttl-refresh 20 skydns2://$COREOS_PRIVATE_IPV4:4001/internal.services.brandfolder.host'
Restart=always

[X-Fleet]
Global=true
